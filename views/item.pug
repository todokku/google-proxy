li.search-item
	if(item.type === "image")
		div.title= item.title
		for link in item.link
			a(href= link.href, target='_blank')
				img(id= link.id, alt= 'result', height= link.height, width= link.width, src= link.src)
		script!= item.script
	else if(item.type === "group")
		div
			a.title(href=item.titleLink, target='_blank')!= item.title	
			a.soft-link(href= 'https://r.hzb6.cn/-----' + item.titleLink, target='_blank') SNAPSHOT
		for link in item.link
			div
				a.group-title(href= link.href, target='_blank')!= link.title
				span!= link.description
					a.soft-link(href= 'https://r.hzb6.cn/-----' + link.href, target='_blank') SNAPSHOT
	else
		a.title(href=item.link, target='_blank')= item.title
		div!= item.description
			span
				a.soft-link(href= 'https://r.hzb6.cn/-----' + item.link, target='_blank') SNAPSHOT
